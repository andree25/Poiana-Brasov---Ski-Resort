<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/admin_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="id"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Space
            android:id="@+id/admin_space1"
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_toEndOf="@+id/admin_text_id"/>

        <TextView
            android:id="@+id/admin_text_fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/admin_space1"
            android:text="fname"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Space
            android:id="@+id/admin_space2"
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_toEndOf="@+id/admin_text_fname"/>

        <TextView
            android:id="@+id/admin_text_lname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/admin_space2"
            android:text="lname"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>