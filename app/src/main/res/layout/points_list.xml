<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/subs_text_cardType"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="ctype" />

        <Space
            android:id="@+id/subs_space1"
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_toEndOf="@+id/subs_text_cardType" />

        <TextView
            android:id="@+id/subs_text_price"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/subs_space1"
            android:fontFamily="monospace"
            android:text="price" />

        <Space
            android:id="@+id/subs_space2"
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:layout_toEndOf="@+id/subs_text_price" />

        <!-- ADD BUTTON -->

        <TextView
            android:id="@+id/subs_text_kprice"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/subs_space2"
            android:fontFamily="monospace"
            android:text="kprice" />

        <Button
            android:id="@+id/add_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/list_item_count"
            android:backgroundTint="@color/button"
            android:text="+"
            android:textSize="12sp" />

        <!-- COUNT -->
        <TextView
            android:id="@+id/list_item_count"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toStartOf="@+id/delete_btn"
            android:layout_toLeftOf="@+id/delete_btn"
            android:textAlignment="center" />

        <!-- MINUS BUTTON -->
        <Button
            android:id="@+id/delete_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/button"
            android:text="-"
            android:textSize="12sp" />

        <Button
            android:id="@+id/list_prices_buttonadd"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@+id/subs_text_cardType"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/button"
            android:text="@string/points_button_add" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>